<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.ui.ReportController" spacing="10" style="-fx-padding: 10;">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="reportTypeComboBox" prefWidth="200"/>
        <Button text="Generate Report" onAction="#handleGenerateReport"/>
    </HBox>
    <TableView fx:id="reportTable" VBox.vgrow="ALWAYS">
        <!-- Columns will be added dynamically -->
    </TableView>
</VBox>
