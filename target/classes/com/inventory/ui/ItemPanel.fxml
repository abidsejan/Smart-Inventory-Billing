<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.ui.ItemController" spacing="10" style="-fx-padding: 10;">
    <HBox spacing="10">
        <Button text="Add Item" onAction="#handleAddItem"/>
        <Button text="Edit Item" onAction="#handleEditItem"/>
        <Button text="Delete Item" onAction="#handleDeleteItem"/>
    </HBox>
    <TableView fx:id="itemTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="priceColumn" text="Price"/>
            <TableColumn fx:id="quantityColumn" text="Quantity"/>
        </columns>
    </TableView>
</VBox>
